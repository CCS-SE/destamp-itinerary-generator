{
  "name": "@destamp/db",
  "version": "0.1.0",
  "main": "./index.ts",
  "types": "./index.ts",
  "scripts": {
    "clean": "rm -rf .turbo node_modules",
    "dev": "pnpm with-env ts-node-dev --no-notify --respawn --transpile-only src",
    "db:generate": "pnpm with-env prisma generate",
    "db:push": "pnpm with-env prisma db push --skip-generate",
    "db:migrate": "pnpm with-env prisma migrate dev",
    "db:seed": "pnpm with-env node prisma/seed.js",
    "with-env": "dotenv -e ../../.env --",
    "nexus:generate": "ts-node --transpile-only src/graphql/schema/index.ts"
  },
  "prisma": {
    "seed": "ts-node --transpile-only prisma/seed.ts"
  },
  "dependencies": {
    "@apollo/server": "^4.9.1",
    "@faker-js/faker": "^8.0.2",
    "@prisma/client": "^5.1.1",
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "graphql": "^16.8.0",
    "graphql-scalars": "^1.22.2",
    "jest-mock-extended": "^3.0.5",
    "nexus": "^1.3.0",
    "nexus-validate": "^1.4.0",
    "ts-node-dev": "^2.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/node": "^20.5.1",
    "dotenv-cli": "^7.2.1",
    "prisma": "^5.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  }
}
